{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2015", "dom"]     
  },
  "exclude": [
    "node_modules",
    "aot"
  ],
  "types": [
      "hammerjs"
  ],
  
  "styles": [
    "../app/assets/styles.css",
    "../node_modules/bootstrap/dist/css/bootstrap.css"
    ],
    
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "debug": false,
    "genDir": "aot"
  },
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}

